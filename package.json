{
  "name": "autobuy-bot",
  "version": "1.0.0",
  "description": "Automated buy bot với Web UI, Electron, Terminal UI, scheduler và multi-account support",
  "main": "index.js",
  "scripts": {
    "start":          "node index.js",
    "start:web":      "UI_MODE=web node index.js",
    "start:terminal": "UI_MODE=terminal node index.js",
    "start:electron": "electron index.js",
    "dev":            "node --watch index.js",
    "test":           "node --test tests/*.test.js",
    "test:verbose":   "node --test --reporter=spec tests/*.test.js",
    "test:watch":     "node --test --watch tests/*.test.js",
    "pack":           "electron-builder --dir",
    "dist":           "electron-builder",
    "dist:win":       "electron-builder --win",
    "dist:mac":       "electron-builder --mac",
    "dist:linux":     "electron-builder --linux"
  },
  "keywords": ["autobuy", "bot", "puppeteer", "electron"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express":    "^4.18.2",
    "puppeteer":  "^21.0.0",
    "ws":         "^8.14.2"
  },
  "optionalDependencies": {
    "blessed":        "^0.1.81",
    "node-notifier":  "^10.0.1"
  },
  "devDependencies": {
    "electron":         "^27.0.0",
    "electron-builder": "^24.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId":   "com.autobuy.bot",
    "productName": "AutoBuy",
    "asar": true,
    "files": [
      "**/*",
      "!tests/**",
      "!logs/**",
      "!sessions/**",
      "!history.json",
      "!*.json",
      "sites/example.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "electron/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
